{
    "manifest_version": 3,
    "name": "Watch Pizza Party",
    "version": "1.0.2",
    "description": "Synchronized watch parties for Netflix and YouTube with real-time chat.",
    "incognito": "split",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "tabCapture",
        "offscreen"
    ],
    "host_permissions": [
        "https://*.netflix.com/*",
        "https://*.youtube.com/*",
        "https://youtu.be/*",
        "https://watch-pizza-party.onrender.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*",
                "https://youtu.be/*",
                "https://*.netflix.com/*"
            ],
            "js": [
                "player-bridge.js"
            ],
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": [
                "https://*.youtube.com/*",
                "https://youtu.be/*",
                "https://*.netflix.com/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "match_about_blank": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "player-bridge.js"
            ],
            "matches": [
                "https://*.youtube.com/*",
                "https://youtu.be/*",
                "https://*.netflix.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
